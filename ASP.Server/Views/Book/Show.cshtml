@using ASP.Server.Model
@model Book
@{
    ViewData["Title"] = "Home Page";
}
<div class="listeBooks">
    <h1>@Model.Title</h1>
    <h2>de @Model.Author</h2>
    <h3>Genres :</h3>
    <ul>
        @foreach (Genre genre in Model.Genres)
        {
            <li>@genre.Name</li>
        }
    </ul>
    <h3>Prix : @string.Format("{0:0.00} €",Model.Price)</h3>
    <div class="Book-Content">
        <h3>Contenu :</h3>
        @Html.Raw(Model.Content)
    </div>
</div>
<style>
    .listeBooks{
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .Book-Content{
        background: none;
    }
</style>
